<!DOCTYPE html>
<html>

<head>
    <nav class="navbar navbar-light bg-light">
        <%= link_to home_path do %>
        <%= fa_icon "home", size: '3x', id: "home-icon" %>
        <% end %>

        <h1>Professional Brotherhood of Engineers</h1>
        <%= button_to "Logout", logout_path, method: "delete", :class => "btn btn-primary" %>

    </nav>
</head>

<h2 class="bottom-space">Change Password</h2>

<%= simple_form_for @user, url: { :controller=> 'users', :action=> 'update_password'}, html: { method:'put' } do |f|%>
<%= f.hidden_field :user_id, value: @user.id %>
<table class="login-form-spacing">
    <tr>
        <th>Password:</th>
        <td><%= f.text_field :password, placeholder: 'Change Password', :class => "text-field"%></td>
    </tr>
</table>
<%= submit_tag "Save Changes", :class => "btn btn-primary", data: { confirm: 'Are you sure you want to change this password?' } %>
<%end%>

</html>